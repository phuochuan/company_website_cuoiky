@model company_website.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<style>
    .title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .question {
        font-size: 20px;
        color: #666;
        margin-bottom: 20px;
    }

    .info {
        font-size: 22px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

        .row dt, .row dd {
            flex: 0 0 50%; /* Hiển thị cặp nhãn và giá trị theo cột, 2 cột trên mỗi hàng */
            padding: 10px;
        }

        .row dt {
            font-weight: bold;
            color: #555;
        }

        .row dd {
            color: #777;
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin-bottom: 0;
        font-size: 16px;
        font-weight: bold;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .btn-danger {
        color: #fff;
        background-color: #d9534f;
        border-color: #d9534f;
    }

        .btn-danger:hover {
            color: #fff;
            background-color: #c9302c;
            border-color: #ac2925;
        }

    .back-link {
        font-size: 16px;
        color: #337ab7;
        text-decoration: none;
        margin-top: 20px;
        display: inline-block;
    }

        .back-link:hover {
            text-decoration: underline;
        }

</style>
<h1 class="title">Delete Employee</h1>

<h3 class="quesion">Are you sure you want to delete this?</h3>
<div>
    <h4 class="info">Employee Information</h4>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            <label>ID</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            <label>Fullname</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt class = "col-sm-2">
            <label>Date Of Birth</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            <label>Citizen Identity Card</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Description)
        </dd>
        <dt class="col-sm-2">
            <label>Phone Number</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
