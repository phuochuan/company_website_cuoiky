@model company_website.Models.Task

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Style for delete page container */
    .delete-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        /* Style for delete page title */
        .delete-page h1 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        /* Style for delete page message */
        .delete-page h3 {
            font-size: 24px;
            color: #777;
            margin-bottom: 20px;
        }

        /* Style for delete page content */
        .delete-page dl {
            margin-bottom: 20px;
        }

        .delete-page dt {
            font-weight: bold;
        }

        .delete-page dd {
            margin-left: 0;
        }

        /* Style for thumbnail image */
        .delete-page img {
            max-width: 100%;
            max-height: 200px;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        /* Style for delete button */
        .delete-page form input[type="submit"] {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }

            .delete-page form input[type="submit"]:hover {
                background-color: #c82333;
            }

</style>

<div class="delete-page">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Task</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                <label>Task Description</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaskDescription)
            </dd>
            <dt class="col-sm-2">
                <label>Expected End Date</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpectedEndDate)
            </dd>
            <dt class="col-sm-2">
                <label>Start Date</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                <label>Team Size</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamSize)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                <label>Thumbnail</label>
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ThumbnailBase64))
                {
                    <img src="data:image/jpeg;base64,@Model.ThumbnailBase64" alt="Thumbnail" style="max-width: 100px; max-height: 100px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
